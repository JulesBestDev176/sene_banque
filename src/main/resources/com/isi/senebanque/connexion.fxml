<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="350.0" styleClass="conteneur-connexion" stylesheets="@../../../styles/connexion.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.isi.senebanque.controllers.ConnexionController">

    
    <Button fx:id="boutonFermer" onAction="#btnQuitterAction" styleClass="bouton-fermer" text="✕" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10" />

    <VBox spacing="20.0" styleClass="formulaire-connexion" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="50.0">

        
        <HBox alignment="CENTER" spacing="10">
            <Label styleClass="logo-texte" text="S">
                <font>
                    <Font name="System Bold" size="32.0" />
                </font>
            </Label>
            <Label styleClass="titre-application" text="SeneBanque">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </HBox>

        <Label alignment="CENTER" styleClass="sous-titre" text="Connexion à votre compte" />

        
        <VBox spacing="5">
            <Label styleClass="label-champ" text="Nom d'utilisateur" />
            <TextField fx:id="champUtilisateur" promptText="Entrez votre nom d'utilisateur" styleClass="champ-saisie" />
        </VBox>

        
        <VBox spacing="5">
            <Label styleClass="label-champ" text="Mot de passe" />
            <PasswordField fx:id="champMotDePasse" promptText="Entrez votre mot de passe" styleClass="champ-saisie" />
        </VBox>

        
        <Button fx:id="boutonConnexion" maxWidth="Infinity" styleClass="bouton-connexion" text="SE CONNECTER" />

        
        <Label fx:id="messageErreur" alignment="CENTER" styleClass="message-erreur" text="" visible="false" />
      <Label fx:id="lblErrorMessage" alignment="CENTER" layoutX="73.0" layoutY="97.0" styleClass="sous-titre" textFill="#ee0000" />

        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
</AnchorPane>
